<body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid.min.js"></script>

    <div id="jsGrid"></div>

    <script>



        var countries = [
            { Name: "", Id: 0 },
            { Name: "United States", Id: 1 },
